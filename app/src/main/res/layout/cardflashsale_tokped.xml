<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="170dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivItem1"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/img_item1"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTitleitem1"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Philips MultiPack MyCare LedBulb 10W 6500K Putih"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvContentItem1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp127.605"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivStar"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_staryellow"/>
                <TextView
                    android:id="@+id/tvUlasan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9(8.820 ulasan)"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="170dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivItem2"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/img_item2"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTitleitem2"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium TS Shampoo 100 ML &amp; 500 ML - 100 ml"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvContentItem2"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp47.505"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivStar2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_staryellow"/>
                <TextView
                    android:id="@+id/tvUlasan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9(76 ulasan)"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="170dp"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivItem3"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/img_item3"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTitleitem3"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAMYPOKO STANDAR PANTS L-30 - Size L30"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvContentItem3"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp50.000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivStar3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_staryellow"/>
                <TextView
                    android:id="@+id/tvUlasan3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5(2.220 ulasan)"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>